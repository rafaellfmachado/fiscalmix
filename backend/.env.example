# ============================================
# EMAIL VERIFICATION & PASSWORD RESET
# ============================================
# Tempo de expiração do link de verificação (em minutos)
EMAIL_VERIFICATION_EXPIRE=60

# Tempo de expiração do link de reset de senha (em minutos)
PASSWORD_RESET_EXPIRE=60

# URL do frontend para redirecionamento após verificação
FRONTEND_URL="${SPA_URL}"
FRONTEND_VERIFY_EMAIL_URL="${SPA_URL}/verify-email"
FRONTEND_RESET_PASSWORD_URL="${SPA_URL}/reset-password"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
