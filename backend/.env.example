MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
# ============================================
# MAIL CONFIGURATION
# ============================================
# Opções: smtp, sendmail, mailgun, ses, postmark, log, array
MAIL_MAILER=smtp

# --- SMTP Genérico ---
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_ENCRYPTION=tls

